# Kraken API
KRAKEN_API_KEY={{ kraken_api_key }}
KRAKEN_SECRET_KEY={{ kraken_secret_key }}

# Anthropic (Claude) — used when ai.provider = "anthropic"
ANTHROPIC_API_KEY={{ anthropic_api_key | default('', true) }}

# Google Vertex AI — used when ai.provider = "vertex"
GOOGLE_APPLICATION_CREDENTIALS={{ google_credentials_path | default('/app/keys/vertex-sa.json', true) }}

# Telegram Bot
TELEGRAM_BOT_TOKEN={{ telegram_bot_token }}
TELEGRAM_CHAT_ID={{ telegram_chat_id }}

# Data API
API_KEY={{ api_key }}

# Grafana
GRAFANA_ADMIN_PASSWORD={{ grafana_admin_password | replace('$', '$$') }}
